<main class="contenedor">
  <form
    action="/editar-perfil"
    method="POST"
    class="default-form"
    enctype="multipart/form-data"
  >
    <div class="campo">
      <label for="nombre">Nombre</label>
      <input
        value={{usuario.nombre}}
        type="text"
        name="nombre"
        placeholder="Tu Nombre"
        required
      />
    </div>

    <div class="campo">
      <label for="email">E-mail</label>
      <input
        value={{usuario.email}}
        type="email"
        name="email"
        placeholder="Tu E-mail"
        required
      />
    </div>
    <div class="campo">
      <label for="password">Password</label>
      <input type="password" name="password" placeholder="Tu Password" />
    </div>
    <div class="campo">
      <label for="imagen">Imagen</label>
      <input type="file" name="imagen" placeholder="Tu Imagen de Perfil" />
      <img
        src="uploads/perfiles/{{usuario.imagen}}"
        alt="imagen de perfil"
        class="admin-perfil"
      />
    </div>
    <div class="campo">

      <input type="submit" value="Guardar Cambios" class="btn btn-azul" />
    </div>
  </form>
</main>