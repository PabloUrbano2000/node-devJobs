<main class="contenedor">
  <form action="/iniciar-sesion" method="POST" class="default-form">
    <div class="campo">
      <label for="email">E-mail</label>
      <input type="email" name="email" placeholder="Tu Email" required />
    </div>
    <div class="campo">
      <label for="password">Password</label>
      <input
        type="password"
        name="password"
        placeholder="Tu Password"
        required
      />
    </div>

    <div class="campo acciones">
      <a href="/crear-cuenta">Cre una Cuenta</a>
      <a href="/reestablecer-password">Olvidé mi password</a>
    </div>
    <div class="campo">
      <input type="submit" value="Iniciar Sesión" class="btn btn-azul" />
    </div>
  </form>
</main>